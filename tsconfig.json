{
	"compilerOptions": {
		"declaration": true,
		"strictNullChecks": true,
		"target": "es5",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"lib": [
			"ES2015",
			"DOM"
		],
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}